<h1>My recipes</h1>

<p>If nothing shows here, try clicking on this button :</p>
<button onclick="Refresh()">Refresh</button>
<br/>

{{#each recipes}}
    <div id="recipe" class="recipe">
        <h2>{{this.name}}</h2>
        <div class="recipe-content">
            <img class="recipe-thumbnail" src="{{this.depiction}}" alt="{{this.name}} depiction">
            <div>
                <p>Recipe from : {{this.country}}</p>
                <p>Ingredients : {{this.ingredients}}</p>
                <p>Does not contain : {{this.allergies}}</p>
                <a href="{{this.resource}}">> More information about <span style="font-weight: 700;">{{this.name}}</span></a>
            </div>
        </div>
    </div>
{{/each}}

<script>

    window.onload = function() {
        if(!window.location.hash) {
            window.location = window.location + '#1';
            window.location.reload();
        }
    }

    function Refresh() {
        window.location.reload();
    }
</script>